<html lang="en">
  <%- include('../partials/head.ejs') %>

  <body>
    <%- include('../partials/nav.ejs') %>

    <div class="container">
      <form action="/blogs" class="mt-5" method="POST">
        <div class="row justify-content-center mx-1">
          <div class="col-md-9 col-lg-7 col-xl-6">
            <div class="mb-5">
              <label for="title" class="form-label">Blog title:</label>
              <input type="text" class="form-control" id="title" name="title" required />
            </div>
            <div class="mb-5">
              <label for="snippet" class="form-label">Blog snippet:</label>
              <input type="text" class="form-control" id="snippet" name="snippet" required />
            </div>
            <div class="mb-5">
              <label for="body" class="form-label">Blog body:</label>
              <textarea class="form-control" id="body" rows="5" name="body" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </form>

      <%- include('../partials/footer.ejs') %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
